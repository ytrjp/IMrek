<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen 
	xmlns:android="http://schemas.android.com/apk/res/android">
	
    <PreferenceCategory
            android:title="@string/category_one">
            
        <CheckBoxPreference
                android:key="checkbox_preference"
                android:title="@string/pref_one"
                android:summary="@string/summary_one" />
            
    </PreferenceCategory>
                
	<PreferenceCategory
            android:title="@string/category_two">

        <EditTextPreference
                android:key="edittext_preference"
                android:title="@string/pref_two"
                android:summary="@string/summary_two"
                android:dialogTitle="@string/dialog_title_two" />
                
        <ListPreference
                android:key="list_preference"
                android:title="@string/pref_three"
                android:summary="@string/summary_three"
                android:entries="@array/entries_list_three"
                android:entryValues="@array/entryvalues_three"
                android:dialogTitle="@string/dialog_title_three" />

	</PreferenceCategory>
</PreferenceScreen>
