<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen 
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<PreferenceCategory
		android:title="Login Options">
			
		<CheckBoxPreference
			android:key="rememberme"
			android:title="Remember Me"
			android:summary="Remember the current username at the login screen" />
		
		<CheckBoxPreference
			android:key="autologin"
			android:title="Automatic Login"
			android:summary="Automatically log in with the current account when the app starts" />
			
	</PreferenceCategory>
	
	<PreferenceCategory
		android:title="Notification Settings">

		<EditTextPreference
			android:key="edittext_preference"
			android:title="@string/pref_two"
			android:summary="@string/summary_two"
			android:dialogTitle="@string/dialog_title_two" />
				
		<ListPreference
			android:key="list_preference"
			android:title="@string/pref_three"
			android:summary="@string/summary_three"
			android:entries="@array/entries_list_three"
			android:entryValues="@array/entryvalues_three"
			android:dialogTitle="@string/dialog_title_three" />

	</PreferenceCategory>
</PreferenceScreen>
